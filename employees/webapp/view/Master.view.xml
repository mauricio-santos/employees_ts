<mvc:View  
    controllerName="de.santos.employees.controller.Master"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:filter="sap.ui.comp.filterbar"
    displayBlock="true"
>
    <f:DynamicPage id="idDynamicPage">
        <f:title>
            <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <Title id="idEmployeesReportTitle" text="{i18n>title}" wrapping="true"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader id="idDynamicPageHeader">
                <filter:FilterBar id="idFilterBar" 
                    search="onFilterBarGoSearch"
                    showClearOnFB="true"
                    clear="onFilterBarClear"
                >
                    <filter:filterGroupItems>

                        <filter:FilterGroupItem id="idAFilterGroupItem"
                            groupName="filters"
                            name="filterA"
                            label="{i18n>employee}"
                            visibleInFilterBar="true"
                        >
                            <filter:control>
                                <Input id="idInput"/>
                            </filter:control>
                        </filter:FilterGroupItem>

                        <filter:FilterGroupItem id="idBFilterGroupItem"
                            groupName="filters"
                            name="FilterB"
                            label="{i18n>country}"
                            visibleInFilterBar="true"
                        >
                            <filter:control>
                                <ComboBox id="idCountriesComboBox" items="{countriesModel>/Countries}">
                                    <core:ListItem id="idCountryListItem" 
                                        key="{countriesModel>code}" 
                                        text="{countriesModel>country}"
                                    />
                                </ComboBox>
                            </filter:control>   
                        </filter:FilterGroupItem>

                    </filter:filterGroupItems>
                </filter:FilterBar>
            </f:DynamicPageHeader>
        </f:header>
            
        <f:content>
            <Table id="idEmployeesTable" items="{employeesModel>/Employees}" growing="true">
                <columns>
                    <Column id="idEmployeeIdColumn" width="6rem">
                        <Label id="idEmployeeIDLabel" text="{i18n>employeeId}"/>
                    </Column>

                    <Column id="idFullNameColumn" width="20rem">
                        <Label id="idFullNameLabel" text="{i18n>fullName}"/>
                    </Column>

                    <Column id="idCountryColumn" width="8rem">
                        <Label id="idCountryLabel" text="{i18n>country}"/>
                    </Column>

                    <Column id="idCityColumn" width="8rem">
                        <Label id="idCityLabel" text="{i18n>city}"/>
                    </Column>

                    <Column id="idPostalCodeColumn" width="8rem">
                        <Label id="idPostalCodeLabel" text="{i18n>postalCode}"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="idColumnListItem">
                        <cells>
                            <ObjectIdentifier id="idObjectIdentifier" title="{employeesModel>EmployeeID}"/>
                            <Text id="idFullNameText" text="{employeesModel>LastName}, {employeesModel>FirstName}"/>
                            <Text id="idCountryText" text="{employeesModel>Country}"/>
                            <Text id="idCityText" text="{employeesModel>City}"/>
                            <Text id="idPostalCodeText" text="{employeesModel>PostalCode}"/>
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
