<mvc:View controllerName="de.santos.employees.controller.Details"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
>
    <uxap:ObjectPageLayout id="idObjectPageLayout">
    
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle id="idObjectPageDynamicHeaderTitle">
                <uxap:expandedHeading>
                    <Title id="idExpandedHeadingText" text="{employeesModel>FirstName} {employeesModel>LastName} {employeesModel>EmployeeID}"/>
                </uxap:expandedHeading>

                <uxap:snappedHeading>

                </uxap:snappedHeading>

                <uxap:expandedContent>
                    <FlexBox id="idFlexBox" fitContainer="true" alignItems="Center">
                        <Title id="idSnappedHeadingText" text="{employeesModel>FirstName} {employeesModel>LastName}"/>
                    </FlexBox>
                </uxap:expandedContent>

                <uxap:snappedContent>
                    
                </uxap:snappedContent>

                <uxap:actions>
                    <Button id="idCloseViewButton" icon="sap-icon://decline" type="Emphasized" press="onButtonCloseViewPress"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

    </uxap:ObjectPageLayout>
</mvc:View>